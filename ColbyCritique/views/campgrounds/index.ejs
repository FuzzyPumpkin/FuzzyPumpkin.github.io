<% include ../partials/header %>



<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp</h1>
        <p>We feature campgrounds from all over the world.</p>
        <p><a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new campground</a></p>
    </div>
</header>


<div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6"> 
        <!--This should use a card in BS4-->
            <div class="thumbnail"><img src="<%= campground.image %>"></div>
            <div class="caption"><h4><%= campground.name %></h4></div>
            <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
        </div>
    <% }); %>
</div>

</div>
<% include ../partials/footer %>